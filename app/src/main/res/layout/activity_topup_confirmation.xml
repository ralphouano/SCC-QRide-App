<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".TopupConfirmation">

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="320dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_check"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/fontcolor"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:text="@string/label_sent" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="52dp"
            android:text="@string/sendtoken_recipient_name"
            android:textColor="@color/fontcolor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="90dp"
            android:text="@string/user_edp"
            android:textColor="@color/fontcolor"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="150dp"
            android:layout_marginStart="46dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/fontcolor"
                android:text="Date" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/fontcolor"
                android:textAlignment="textEnd"
                android:text="2024-07-31" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="190dp"
            android:layout_marginStart="46dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/fontcolor"
                android:layout_weight="1"
                android:text="Time" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fontcolor"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="07:30 AM" />
        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="300dp"
            android:layout_marginVertical="230dp"
            android:layout_marginHorizontal="33dp"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="255dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="Amount"
                android:textColor="@color/fontcolor"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="93sp"
                android:text="â‚±30.00"
                android:textColor="@color/fontcolor"
                android:textStyle="bold"
                android:textSize="30sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952">

        <FrameLayout
            android:layout_width="370dp"
            android:layout_height="73dp"
            android:background="@drawable/gradient" >

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/btnlabel_back_to_dashboard"
                android:letterSpacing=".2"
                android:textSize="24sp"
                android:background="@color/transparent"/>
        </FrameLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>